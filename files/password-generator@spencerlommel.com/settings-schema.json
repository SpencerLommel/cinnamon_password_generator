{
    "password-length": {
        "type": "spinbutton",
        "default": 12,
        "min": 1,
        "max": 32,
        "step": 1,
        "units": "characters",
        "description": "Password Length"
    },
    "include-lowercase": {
        "type": "checkbox",
        "default": true,
        "description": "Include Lowercase Letters"
    },
    "include-uppercase": {
        "type": "checkbox",
        "default": true,
        "description": "Include Uppercase Letters"
    },
    "include-numbers": {
        "type": "checkbox",
        "default": true,
        "description": "Include Numbers"
    },
    "include-symbols": {
        "type": "checkbox",
        "default": true,
        "description": "Include Symbols"
    }
}
